@model PagedList.PagedList<WebBanHangOnline.Models.EF.Wishlist>
@using PagedList.Mvc;
@using PagedList;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
 }
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css" />
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        width: 200px;
        max-height: 200px;
    }
</style>
<link type="text/css" href="~/Content/assets/styles/main_style.css" rel="stylesheet" />
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="title-news">Sản phẩm yêu thích</h2>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {

        foreach (var item in Model)
        {
<div class="row row-item-new">
    <div class="col-md-3">
        <div class="img-box">
            <a href="" title="@item.Product.Title">
                <img src="@item.Product.Image" alt="@item.Product.Title" />
            </a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="img-box">
            <a href="/@item.Product.Alias-n@(item.ProductId)" title="@item.Product.Title">@item.Product.Title </a>
            @*<div class="description-box">
                @item.Description
            </div>*@
        </div>
    </div>
</div> }

<div class="row" style="box-sizing:border-box; border-radius:4px; padding:10px;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>}
</div>

