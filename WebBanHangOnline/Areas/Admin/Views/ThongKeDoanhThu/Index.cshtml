
@{ ViewBag.Title = "Thống kê doanh thu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }


<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thống kê doanh thu </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thống kê</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row ">
                <div class="col-md-4">
                    <label for="fromDate">Từ ngày:</label>
                </div>
                <div class="col-md-4">
                    <label for="toDate">Đến ngày:</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control datepicker" id="fromDate" name="fromDate" placeholder="dd/mm/yyyy">
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control datepicker" id="toDate" name="toDate" placeholder="dd/mm/yyyy">
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary" id="searchButton">Tìm kiếm</button>
                </div>
            </div>

            <div>
                <div class="col-md-12">
                    <div class="chart">
                        <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
                <hr />
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ngày</th>
                                <th>DoanhThu</th>
                                <th>Lợi nhuận</th>
                            </tr>
                        </thead>
                        <tbody id="load_data"></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</section>

<script src="~/Content/clients/plugins/chart.js/Chart.min.js"></script>
<script src="~/Content/assets/plugins/moment/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/locales/bootstrap-datepicker.vi.min.js"></script>
<script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


@section scripts{
    <script>
        $(function () {
            
            $(document).ready(function () {
                $('.datepicker').datepicker({
                    format: 'dd/mm/yyyy',
                    language: 'vi', // Vietnamese language
                    autoclose: true
                });
            });
            
            var barChart;

            // Function to load data based on date range
            function loadDataByDateRange(fromDate, toDate) {
                $.ajax({
                    url: '/ThongKeDoanhThu/ThongKeDoanhthu',
                    type: 'GET',
                    data: { fromDate: fromDate, toDate: toDate },
                    success: function (rs) {
                        var arrDoanhThu = [];
                        var arrLoiNhuan = [];
                        var arrDate = [];

                        $.each(rs.Data, function (i, item) {
                            var strDate = moment(item.Date).format('DD/MM/yyyy');
                            arrDate.push(strDate);
                            arrDoanhThu.push(item.DoanhThu);
                            arrLoiNhuan.push(item.LoiNhuan);
                        });
                        if (barChart) {
                            barChart.destroy();
                        }
                        // Update chart data
                        var barChartCanvas = $('#barChart').get(0).getContext('2d');
                        var barChartData = {
                            labels: arrDate,
                            datasets: [
                                {
                                    label: 'Lợi nhuận',
                                    backgroundColor: 'rgba(60,141,188,0.9)',
                                    borderColor: 'rgba(60,141,188,0.8)',
                                    pointRadius: false,
                                    pointColor: '#3b8bba',
                                    pointStrokeColor: 'rgba(60,141,188,1)',
                                    pointHighlightFill: '#fff',
                                    pointHighlightStroke: 'rgba(60,141,188,1)',
                                    data: arrLoiNhuan
                                },
                                {
                                    label: 'Danh thu',
                                    backgroundColor: 'rgba(210, 214, 222, 1)',
                                    borderColor: 'rgba(210, 214, 222, 1)',
                                    pointRadius: false,
                                    pointColor: 'rgba(210, 214, 222, 1)',
                                    pointStrokeColor: '#c1c7d1',
                                    pointHighlightFill: '#fff',
                                    pointHighlightStroke: 'rgba(220,220,220,1)',
                                    data: arrDoanhThu
                                },
                            ]
                        };

                        var barChartOptions = {
                            responsive: true,
                            maintainAspectRatio: false,
                            datasetFill: false
                        };

                        barChart =new Chart(barChartCanvas, {
                            type: 'bar',
                            data: barChartData,
                            options: barChartOptions
                        });

                        // Update table data
                        load_data(rs.Data);
                    }
                });
            }
            function isValidDate(dateString) {
                var regEx = /^\d{2}\/\d{2}\/\d{4}$/;
                if (!dateString.match(regEx)) return false;  // Invalid format
                var d = moment(dateString, "DD/MM/YYYY");
                return d.isValid() && d.isSameOrBefore(moment());
            }
            // Search button click event
            $('#searchButton').click(function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

                // Validate the date format
                if (!isValidDate(fromDate) || !isValidDate(toDate)) {
                    alert("Vui lòng nhập ngày đúng định dạng dd/MM/yyyy và không vượt quá ngày hiện tại.");
                    return;
                }
                // Check if dates are valid
                if (fromDate === "" || toDate === "") {
                    alert("Vui lòng nhập đầy đủ ngày bắt đầu và kết thúc.");
                    return;
                }
                var toDateMoment = moment(toDate, 'DD/MM/YYYY');

                // Thêm một ngày vào toDate
                toDateMoment.add(1, 'days');
                toDate = toDateMoment.format('DD/MM/YYYY');
                loadDataByDateRange(fromDate, toDate);
                // Load data by date range
                loadDataByDateRange(fromDate, toDate);
            });

            // Initial load without date filter
            loadDataByDateRange('', '');

            function load_data(data) {
                var strHtml = "";
                $.each(data, function (i, item) {
                    var strDate = moment(item.Date).format('DD/MM/yyyy');

                    strHtml += "<tr>";
                    strHtml += "<td>" + (i + 1) + "</td>";
                    strHtml += "<td>" + strDate + "</td>";
                    strHtml += "<td>" + item.DoanhThu + "</td>";
                    strHtml += "<td>" + item.LoiNhuan + "</td>";
                    strHtml += "</tr>";
                });
                $('#load_data').html(strHtml);
            }
            $('#searchButton').click(function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

            });
            loadDataByDateRange('', '');

        });
    </script>
}
