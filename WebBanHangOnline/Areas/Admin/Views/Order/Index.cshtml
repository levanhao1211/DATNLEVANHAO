@model PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách đơn hàng";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>


        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3 ">




                    @using (Html.BeginForm("index", "Order", FormMethod.Get, new { }))
                    {
        <div class="input-group input-group-sm">
            @Html.TextBox("searchtext", null, new { @class = "form-control" })
            @*<input type="text" class="form-control" />*@
            <span class="input-group-append">
                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
            </span>
        </div>}

                </div>
            </div>
            <hr/>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Tổng tiền</th>
                        <th>Phương thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
        <tr id="trow_@item.id">
            <td>@i</td>
            <td>@item.Code</td>
            <td>@item.CustomerName</td>
            <td>@item.Phone</td>
            <td>@WebBanHangOnline.Common.Common.FormatNumber(@item.TotalAmount, 0) </td>

            <td>
                @(item.TypePayment==1?"Thanh toán khi nhận hàng":"Chuyển khoản")
            </td>
            <td>
                @if (item.Status == 1)
                {
        <span>Chưa thanh toán</span>}
                @if (item.Status == 2)
                {
        <span>Đã thanh toán</span>}
                @if (item.Status == 3)
                {
        <span>Hoàn thành</span>}
                @if (item.Status == 4)
                {
        <span>Đã Hủy</span>}
            </td>
            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/admin/order/view/@item.id" class="btn btn-sm btn-success">Xem</a>
                <a href="#" class="btn btn-sm btn-primary btnCapNhat" data-id="@item.id">Cập nhật</a>
                <a href="#" data-id="@item.id" class="btn btn-sm btn-danger btnDelete">Hủy</a>
            </td>
        </tr>
i++;
    }
}
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
              <div class="form-group">
                  <label>Trạng thái</label>
                  <select class="form-control" id="ddTrangThai">
                      <option value="1">Chưa thanh toán</option>
                      <option value="2">Đã thanh toán</option>
                      <option value="3">Hoàn thành</option>
                  </select>
              </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btnLuu">Lưu</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                var status = $('#trow_' + id + ' td:eq(6)').text().trim();
                if (status === 'Hoàn thành') {
                    alert('Đơn hàng này đã hoàn thành và không thể cập nhật.');
                    return;
                }
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show')
            });
            $('body').on('click', '.btnLuu', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddTrangThai').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: tt },
                    success: function (res) {

                        if (res.Success) {
                            if (tt == '3') { // Trạng thái hoàn thành
                                $('#trow_' + id + ' .btnDelete').hide();
                                $('#trow_' + id + ' .btnCapNhat').hide();
                            }
                            location.reload();
                        } else {
                            alert('Cập nhật trạng thái không thành công.');
                        }

                    }
                });
            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var status = $('#trow_' + id + ' td:eq(6)').text().trim();
                if (status === 'Hoàn thành') {
                    alert('Đơn hàng này đã hoàn thành và không thể hủy.');
                    return;
                }

                var conf = confirm('Xác nhận hủy đơn hàng này?');
                if (conf == true) {
                    $.ajax({
                        url: '/Admin/Order/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id + ' td:eq(6)').text('Đã hủy'); // Cập nhật trạng thái hiển thị
                                alert('Đơn hàng đã được hủy.');
                            } else {
                                alert('Hủy đơn hàng không thành công.');
                            }
                        }
                    });
                }
            });
        });
    </script>
    }